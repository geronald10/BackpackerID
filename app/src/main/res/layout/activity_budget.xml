<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_budget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/llBudget">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/etBudget"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    android:hint="How much money you've got"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llButton"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <at.markushi.ui.CircleButton
                        app:cb_color="#99CC00"
                        app:cb_pressedRingWidth="16dp"
                        android:layout_margin="16dp"
                        android:id="@+id/btnReady"
                        android:layout_height="256dp"
                        android:layout_width="256dp" />

                    <TextView
                        android:text="READY !"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvReady"
                        android:layout_centerInParent="true"
                        android:textStyle="normal|bold" />
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:text="I'm not sure with my budget "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGoBack"
                android:textAlignment="center" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>
